#setenv MDTK_LIB "$mdtk_lib"
#setenv MDTK_COUPLED_DATA "$mdtk_coupled_data"
setenv MDTK_SCRIPTS "$mdtk_scripts"
#setenv MDTK_DATA "$mdtk_data"
setenv MDTK_OWNER "$mdtk_owner"
