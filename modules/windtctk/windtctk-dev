#%Module -*- tcl -*-##
##
## windtctk modulefile
##
## modulefiles/windtctk.  Generated by RRobinson 11/10/2017
##
proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads the Wind Dev Tool Kit"
}

# for Tcl script use only
set     version      "1.0"

module-whatis "This module loads the WindTC Tool Kit Development; this is a tool kit to help Surge Group members to Develop Surge Scripts"

module load mdtk
conflict windtctk
prereq mdtk


#Set Variables Internally in this Script
set windtctk_home "$env(TK_BASE)/windtc/users/$env(USER)/windtctk"
set windtctk_owner "Enrica"


# Export Variables to Enviroment
setenv WINDTCTK_HOME "$windtctk_home"
setenv WINDTCTK_RUN "$windtctk_home/run"
setenv WINDTCTK_BIN "$windtctk_home/bin"
setenv WINDTCTK_SCRIPTS "$windtctk_home/scripts"
setenv WINDTCTK_SRC "$windtctk_home/src"
setenv WINDTCTK_DATA "$windtctk_home/data"
setenv WINDTCTK_PLATFORMS "$windtctk_home/platforms"
setenv WINDTCTK_TESTING "$windtctk_home/testing"
setenv WINDTCTK_OWNER "$windtctk_owner"
setenv WINDTCTK_USER "$env(TK_BASE)/windtc/users/$env(USER)"

#Set Binary Paths
prepend-path PATH "$windtctk_home/run"


#----------------------------------------------------------------------
#git commands
set-alias windtctk_get_git   "mkdir -p $windtctk_home; cd $windtctk_home; git clone git@github.com:RMS/mdev-windtctk.git $windtctk_home" 
#puts stderr "Developer Mode"
puts stderr "Use command windtctk_get_git to download WindTC - Development Kit to $windtctk_home; Enviroment Variables setup from here"
#----------------------------------------------------------------------
