proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads the Flood Dev Tool Kit"
}

# for Tcl script use only
set     version      "1.0"

module-whatis "This module loads the Surge Tool Kit Development; this is a tool kit to help Surge Group members to Develop Surge Scripts"

#----------------------------------------------------------------------
#git commands
set-alias floodtk_get_git   "mkdir -p $env(TK_BASE)/flood/users/$env(USER)/floodtk; cd $env(TK_BASE)/flood/users/$env(USER)/floodtk; git clone git@github.com:RMS/floodtk.git $env(TK_BASE)/flood/users/$env(USER)/floodtk" 
#puts stderr "Developer Mode"
puts stderr "Use command floodtk_get_git to download Flood - Development Kit to $env(TK_BASE)/flood/users/$env(USER)/floodtk; Enviroment Variables setup from here"

#----------------------------------------------------------------------


conflict floodtk
prereq mdtk

#Set Variables Internally in this Script
set floodtk_home "$env(TK_BASE)/flood/users/$env(USER)/floodtk"
set floodtk_owner "Kechi"


# Export Variables to Enviroment
setenv FLOODTK_HOME "$floodtk_home"
setenv FLOODTK_RUN "$floodtk_home/run"
setenv FLOODTK_BIN "$floodtk_home/bin"
setenv FLOODTK_SCRIPTS "$floodtk_home/scripts"
setenv FLOODTK_DATA "$floodtk_home/data"
setenv FLOODTK_PLATFORMS "$floodtk_home/platforms"
setenv FLOODTK_TESTING "$floodtk_home/testing"
setenv FLOODTK_OWNER "$floodtk_owner"
setenv FLOODTK_USER "$env(TK_BASE)/flood/users/$env(USER)"

#Set Binary Paths
prepend-path PATH "$floodtk_home/run"


