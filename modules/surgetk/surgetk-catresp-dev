proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads the Surge Dev Tool Kit"
}

# for Tcl script use only
set     version      "1.0"

module-whatis "This module loads the Surge Tool Kit Development; this is a tool kit to help Surge Group members to Develop Surge Scripts"

conflict surgetk
#requires mdtk


#Set Variables Internally in this Script
set surgetk_tag "catresp"
set surgetk_home "$env(TK_BASE)/$surgetk_tag/$env(USER)/surgetk"
#set surgetk_home "$::env(HOME)/git/tk_base/surgetk"
set surgetk_bin "$surgetk_home/bin"
set surgetk_owner "surge"


# Export Variables to Enviroment
setenv SURGETK_TAG "$surgetk_tag"
setenv SURGETK_HOME "$surgetk_home"
setenv SURGETK_BIN "$surgetk_bin"
setenv SURGETK_SCRIPTS "$surgetk_home/scripts"
setenv SURGETK_OWNER "$surgetk_owner"
setenv SURGETK_DATA "$surgetk_home/data"
setenv SURGETK_PLATFORMS "$surgetk_home/platforms"
setenv SURGETK_TESTING "$surgetk_home/testing"

setenv SURGETK_COMMON "$env(TK_BASE)/surge/common-minimal"

setenv SURGETK_USER "$env(TK_BASE)/$surgetk_tag/$env(USER)"


#Set Binary Paths
prepend-path PATH "$surgetk_bin/sh"

#----------------------------------------------------------------------
#git commands
set-alias surgetk_get_git   "mkdir -p $surgetk_home; cd $surgetk_home; git clone git@github.com:RMS/mdev-surgetk.git $surgetk_home" 
#puts stderr "Developer Mode"
puts stderr "Use command surgetk_get_git to download Surge - Development Kit to $surgetk_home; Enviroment Variables setup from here"

#----------------------------------------------------------------------
