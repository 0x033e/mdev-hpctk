proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads the Surge Dev Tool Kit"
}

# for Tcl script use only
set     version      "1.0"

module-whatis "This module loads the Surge Tool Kit Development; this is a tool kit to help Surge Group members to Develop Surge Scripts"

#----------------------------------------------------------------------
#git commands
set-alias surgetk_get_git   "mkdir -p $::env(HOME)/git/tk_base/surgetk; cd $::env(HOME)/git/tk_base/surgetk; git clone git@github.com:RMS/surgetk.git $::env(HOME)/git/tk_base/surgetk" 
#puts stderr "Developer Mode"
puts stderr "Use command surgetk_get_git to download Surge - Development Kit to $::env(HOME)/git/tk_base/surgetk; Enviroment Variables setup from here"

#----------------------------------------------------------------------


conflict surgetk
#requires mdtk

#Set Variables Internally in this Script
set surgetk_home $::env(HOME)/git/tk_base/surgetk
set surgetk_bin "$surgetk_home/bin"
set surgetk_scripts "$surgetk_home/scripts"
set surgetk_owner "surge"

# Export Variables to Enviroment
setenv SURGETK_HOME "$surgetk_home"
setenv SURGETK_BIN "$surgetk_bin"
setenv SURGETK_SCRIPTS "$surgetk_scripts"
setenv SURGETK_OWNER "$surgetk_owner"

#Set Binary Paths
prepend-path PATH "$surgetk_bin/sh"

