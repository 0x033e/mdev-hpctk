proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads the Wind Dev Tool Kit"
}

# for Tcl script use only
set     version      "1.0"

module-whatis "This module loads the Surge Tool Kit Development; this is a tool kit to help Surge Group members to Develop Surge Scripts"

#----------------------------------------------------------------------
#git commands
set-alias windtk_get_git   "mkdir -p $env(TK_BASE)/wind/users/$env(USER)/windtk; cd $env(TK_BASE)/wind/users/$env(USER)/windtk; git clone git@github.com:RMS/windtk.git $env(TK_BASE)/wind/users/$env(USER)/windtk" 
#puts stderr "Developer Mode"
puts stderr "Use command windtk_get_git to download Wind - Development Kit to $env(TK_BASE)/wind/users/$env(USER)/windtk; Enviroment Variables setup from here"

#----------------------------------------------------------------------


conflict windtk
prereq mdtk

#Set Variables Internally in this Script
set windtk_home "$env(TK_BASE)/wind/users/$env(USER)/windtk"
set windtk_owner "Kechi"


# Export Variables to Enviroment
setenv WINDTK_HOME "$windtk_home"
setenv WINDTK_RUN "$windtk_home/run"
setenv WINDTK_BIN "$windtk_home/bin"
setenv WINDTK_SCRIPTS "$windtk_home/scripts"
setenv WINDTK_DATA "$windtk_home/data"
setenv WINDTK_PLATFORMS "$windtk_home/platforms"
setenv WINDTK_TESTING "$windtk_home/testing"
setenv WINDTK_OWNER "$windtk_owner"
setenv WINDTK_USER "$env(TK_BASE)/wind/users/$env(USER)"

#Set Binary Paths
prepend-path PATH "$windtk_home/run"


